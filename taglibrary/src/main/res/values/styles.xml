<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TagLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tab_layout_bg_color">#ffffbb33</item>
        <item name="tab_layout_border_color">#ffff8800</item>
        <item name="tab_layout_border_width">1dp</item>
        <item name="tab_layout_border_radius">5dp</item>
        <item name="tab_layout_vertical_interval">5dp</item>
        <item name="tab_layout_horizontal_interval">5dp</item>
        <item name="tab_view_bg_color">#ffffffff</item>
        <item name="tab_view_border_color">#ff333333</item>
        <item name="tab_view_border_width">1dp</item>
        <item name="tab_view_border_radius">5dp</item>
        <item name="tab_view_vertical_padding">5dp</item>
        <item name="tab_view_horizontal_padding">5dp</item>
    </style>

    <style name="TagLayout.Arc">
        <item name="tag_shape">arc</item>
    </style>

    <style name="TagLayout.Rect">
        <item name="tag_shape">rect</item>
    </style>

    <style name="TagLayout.RandomColor">
        <item name="tag_random_color">true</item>
        <item name="tab_layout_bg_color">@android:color/transparent</item>
        <item name="tab_layout_border_color">@android:color/transparent</item>
    </style>

    <style name="TagLayout.RandomColor.Arc">
        <item name="tag_shape">arc</item>
    </style>

    <style name="TagLayout.RandomColor.Rect">
        <item name="tag_shape">rect</item>
    </style>

    <style name="TagLayout.RandomColor.Change">
        <item name="tag_mode">change</item>
        <item name="tag_press_feedback">true</item>
    </style>

</resources>